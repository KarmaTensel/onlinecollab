<h2>Editing your answer</h2>
<hr class="bg-dark border-1 border-top border-dark"> 

<%= form_with model: [@post, @answer ] do |f| %>
    <%= f.rich_text_area :content, class: "form-control", autocomplete: :content %>
    <br>
    <div class="actions">
        <%= f.submit class:"btn btn-success"%>
    </div>
<% end %>