<% if current_user %>
  <%= link_to downvote_post_answer_path(@post, answer), method: :put, remote: :true, class: "link" do %>
    <button class="btn btn-secondary"><i class="bi bi-chevron-down"></i></button>
    <b class="lff-pad"> &nbsp;<%= answer.get_downvotes.size %></b>
  <% end %>
<% end %>