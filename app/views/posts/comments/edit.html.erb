<h2>Editing your comment</h2>
<hr class="bg-dark border-1 border-top border-dark"> 

<%= form_with model: [@post, @comment ] do |f| %>
    <%= f.rich_text_area :body, class: "form-control", autocomplete: :body %>
    <br>
    <div class="actions">
        <%= f.submit class:"btn btn-success"%>
    </div>
<% end %>
